
<body>
  <h1>Books</h1>
  <div class="main-content">
    <table>
      <thead>
        <tr>
        <th class="title">Title</th>
        <th class="body">Body</th>
        <th class="right-space"></th>
      </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <td class="text"><%= book.title %></td>
        <td class="text"><%= book.body %></td>
        <td>
          <p class="link"><%= link_to "Show", book_path(book.id) %></p>
          <!--Showへのリンク-->
          <p class="link"><%= link_to "Edit", edit_book_path(book.id) %></p>
          <p class="link"><%= link_to "Destroy", book_path(book.id),method: :delete,"data-confirm"=>"Are you sure？" %></p>
          <!--「？」が表示されない…-->
        </td>
      </tbody>
      <% end %>

    </table>

  </div>
  <h2>New book</h2>



  <!--エラーメッセージ-->
  <% if @book.errors.any? %>
    <div class = "errors">
      <h4><%= pluralize(@book.errors.count,"error") %> prohibited this product from being saved:</h4>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @book ,local:true do |f| %>
  <!--送信先URL入れてみる？-->


  <div class="text-box">
    <p class="comment">Title</p>
    <%= f.text_field :title %>
  </div>

  <div class="text-box">
    <p class="comment">Body</p>
    <%= f.text_area :body %>
  </div>

  <div class="text-box"><%= f.submit "Create Book" %></div>
  <% end %>


</body>






